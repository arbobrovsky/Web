@model IEnumerable<Presentation.Models.OrderList>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Заказы</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                Имя
            </th>
            <th>
                Email
            </th>
            <th>
                Телефон
            </th>
            <th>
                Комментарий
            </th>
            <th>
                Цена
            </th>
            <th>
                Дата посещения
            </th>
            <th>
                Времени затрачено(минут)
            </th>
            <th>
                Статус заказа
            </th>
            <th>
                Время регистрации заказа
            </th>
            <th>
                Заказанные усулуги
            </th>

            <th>
              Управление заказами
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Order.OrderId
                </td>
                <td>
                    @item.Order.CustomerName
                </td>

                <td>
                    @item.Order.CustomerEmail
                </td>
                <td>
                    @item.Order.CustomerPhone
                </td>
                <td>
                    @item.Order.CustomerComment
                </td>
                <td>
                    @item.Order.Price
                </td>
                <td>
                    @item.Order.Date
                </td>
                <td>
                    @item.Order.TimeWasted
                </td>
                <td>
                    @item.Order.Status
                    <input type="checkbox" name="status" value=""
                           @(item.Order.Status ? "checked=\"checked\"" : "") />
                </td>
                <td>
                    @item.Order.RegistrationTime
                </td>

                <td>
                    <table class="table-active">
                        <thead>
                            <tr>
                                <th>Наименование</th>
                                <th>Цена</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var products in item.Products)
                            {
                                <tr>
                                    <td>@products.ProductName</td>
                                    <td>@products.Price</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </td>
                <td>
                    
                    <div class="row">
                         <a href="EditOrder/@item.Order.OrderId" class="uk-button uk-button-primary">Изменить</a>
                        <input type="button" value="Удалить" class="uk-button uk-button-danger" />
                        <input type="button" value="Занести в черный список" class="uk-button uk-button-secondary" />
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

